!!!
%html
  %head
    %meta{ charset: 'utf-8'}
    %meta{ content: 'IE=Edge,chrome=1', http: { equiv: 'X-UA-Compatible' } }
    %meta{ name: 'viewport', content: 'width=device-width, initial-scale=1.0' }
    -# General
    %meta{ name: 'description', content: '' }
    %meta{ name: 'author', content: '' }
    %meta{ name: 'keywords', content: @keywords.present? ? @keywords : '' }
    -# For Facebook
    %meta{ property: 'og:url', content: ENV['website_url'] + '/' }
    %meta{ property: 'og:title', content: ENV['website_name'] }
    %meta{ property: 'og:description', content: '' }
    - if false
      %meta{ property: 'og:image', content: ENV['website_url'] + '/assets/' + asset_path('logo.png').split('/assets/').last }
    -# For Google+
    %meta{ itemprop: 'name', content: ENV['website_name'] }
    %meta{ itemprop: 'description', content: '' }
    - if false
      %meta{ itemprop: 'image', content: ENV['website_url'] + '/assets/' + asset_path('logo.png').split('/assets/').last }

    %title
      = [@title, 'Boston Sleep'].compact.join(' - ').html_safe

    = favicon_link_tag
    = csrf_meta_tags

    = stylesheet_link_tag 'application', media: 'all', data: { turbolinks_track: 'reload' }
    = javascript_include_tag 'application', data: { turbolinks_track: 'reload' }
    = javascript_tag "var root_url='#{request.script_name + '/'}';"
  %body#top{ class: @body_class, data: { spy: 'scroll', target: '.navbar', offset: '60' } }
    = yield :header

    = yield

    = yield :footer
