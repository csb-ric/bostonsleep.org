- @title = "Contact"

.page-box.last-slide.background-p50-grey.center-vertically-xs-sm
  .container
    .row.col-buffer
      .offset-sm-2.col-sm-10
        %h1.main-title Boston Sleep Reading Center
    .row
      .col-sm-2.hidden-xs-down
        = render "menu/left_menu"
      .col-sm-10
        .backdrop-white
          .row
            .col-sm-5
              %p.lead Contact us and we'll get back to you within 24 hours.
              %p
                %span.glyphicon.glyphicon-map-marker.logo-color
                Boston, US
              %p
                %span.glyphicon.glyphicon-phone.logo-color
                857.307.0352
              %p
                %span.glyphicon.glyphicon-envelope.logo-color
                support@bostonsleep.org
            .col-sm-7
              = form_tag submit_contact_path, method: :post do
                .row
                  .col-sm-6.form-group
                    = text_field_tag "name", params[:name], class: "form-control", placeholder: "Name"
                  .col-sm-6.form-group
                    = email_field_tag "email", params[:email], class: "form-control", placeholder: "Email"
                = text_area_tag "comments", params[:comments], class: "form-control", placeholder: "Comment", rows: 5
                %br
                .row
                  .col-sm-12.form-group
                    %button.btn.btn-primary.pull-right{ type: "submit" } Send
